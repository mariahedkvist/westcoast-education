 @model mvc_app.ViewModels.Teacher.TeacherListViewModel

 @{
    Layout = "_LayoutAdmin";
}


<section class="page-content">
        <div class="page-header">
        <h1 class="page-title">Lärare</h1>
    </div>
    <div class="user-details-container">
        <div class="user-details">
            <div class="go-back">
                <a asp-action="Index" asp-controller="TeachersAdmin">Tillbaka</a>
            </div>
            <h2 class="user-details-header">@Model.FirstName @Model.LastName</h2>
                    <table>
                    <thead>
                <tr class="table-header">
                    <th></th>
                    <th>ID</th>
                    <th>Förnamn</th>
                    <th>Efternamn</th>
                    <th>E-mail</th>
                    <th>Telefonnummer</th>
                    <th>Födelsedatum</th>
                    <th>Adress</th>
                    <th>Postnummer</th>
                    <th>Stad</th>
                    <th>Land</th>
                    <th>Kompetenser</th>
                    <th>Aktuella kurser</th>
                    <th></th>
                </tr>
            </thead>
                        <tr class="table-content">
                        <td><a asp-action="Edit" asp-controller="TeachersAdmin" asp-route-teacherId=@Model.Id>Ändra</a>
                        </td>
                        <td>@Model.Id</td>
                        <td>@Model.FirstName</td>
                        <td>@Model.LastName</td>
                        <td>@Model.Email</td>
                        <td>@Model.Phone</td>
                        <td>@Model.BirthDate</td>
                        <td>@Model.Address</td>
                        <td>@Model.PostalCode</td>
                        <td>@Model.City</td>
                        <td>@Model.Country</td>
                        <td>
                            <ul class="skill-list">
                            @foreach (var skill in Model.Skills){
                            <li class="skill-list-item">@skill.Name</li>
                            }
                            </ul>

                        </td>
                        <td>
                            <ul class="course-list">
                                @foreach (var course in Model.Courses){
                                <li>@course.Title</li>
                                }
                            </ul>
                        </td>
                        <td><a asp-action="Delete" asp-controller="TeachersAdmin"
                            asp-route-teacherId=@Model.Id>Radera</a></td>
                    </tr>
                    </table>
        </div>
    </div>
</section>